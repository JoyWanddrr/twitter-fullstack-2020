<div class="container">
  <div class="row">
    {{> left-sidebar}}
    <div class="col-6 p-0">
      <div class="d-flex align-items-center p-3">
        <a href="javascript:history.back()">
          <img src="/images/basic/back.svg" alt="">
        </a>
        <div style="margin-left: 20px;">
          <span class="fw-bold" style="font-size: 18px;">崎玉</span><br />
          <small class="text-secondary">22 推文</small>
        </div>
      </div>

      <div>
        <div class="profile-cover p-0" style="height: 200px">
