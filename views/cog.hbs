<div class="container">
  <div class="row">
    {{> left-sidebar}}
    <div class="col-6 ">
      <div style="height:74px;">
        <h4 style="font-weight:bold">帳戶設定</h4>
      </div>
      <div class="d-flex justify-content-center" style="border-top:1px solid #E6ECF0">
        <form class="form-cog needs-validation" action="/users/:id" method="POST">
          <div style="width:593px;">
            <label for="account">帳號</label>
            <input type="text" name="account" id="account" placeholder="請輸入帳號" aria-label="User account" required>
          </div>
          <div style="width:593px;">
            <label for="name">名稱</label>
            <input type="text" name="name" id="name" placeholder="請輸入使用者名稱" aria-label="User name" maxlength="50"
              required>
          </div>
          <div class="invalid-feedback" style="width:593px;">
            Looks good!
          </div>
          <div style="width:593px;">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="請輸入Email" aria-label="User email" required>
          </div>
          <div style="width:593px;">
            <label for="password">密碼</label>
            <input type="password" name="password" id="password" placeholder="請設定密碼" aria-label="User password"
              required>
          </div>
          <div style="width:593px;">
            <label for="checkPassword">密碼確認</label>
            <input type="password" name="checkPassword" id="checkPassword" placeholder="請輸再次輸入密碼"
              aria-label="Confirm user password" required>
          </div>
          <button id="button" type="submit" style="width:88px;height:46px;radius:50px;margin-left:400px">儲存</button>
        </form>
      </div>
    </div>

    <div class="col" style="border-left:1px solid #E6ECF0">
    </div>
  </div>
</div>