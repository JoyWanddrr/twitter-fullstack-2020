<div class="container">
  <div class="row">
    {{>message}}
    {{>left-sidebar route="homepage"}}
    {{!-- 首頁/tweets --}}
    <div class="col-6 top">
      <div class="card">
        <div class="card-home">
          <div class=" home-header">
            首頁
          </div>
          <div class="main-top">
            <img src="/images/icon/User Photo.png" class="user-avatar">
            <div class="">
              <form action="/tweets" method="POST">
                <textarea style="resize:none;width:300x; " type="text" name="description" id="description"
                  placeholder="有什麼新鮮事？" required></textarea>
                <button type="submit" class="btn-sml">推文</button>
              </form>
            </div>
          </div>
          <div class="main-bottom">
            {{#each Tweets}}
            <div class="card-body tweets-box">

              {{#if this.User.avatar}}
              <img src="{{this.User.avatar}}" alt="avatar" class="user-avatar">
              {{else}}
              <img src="/images/icon/User Photo.png" alt="avatar" class="user-avatar">
              {{/if}}


              {{!-- <img src="/images/icon/User Photo.png" alt="" class="user-avatar"> --}}
              <div class="tweets-box-main">
                <div class="tweets-header">
                  <span class="card-title tweets-name">{{this.User.name}}</span>
                  <span class="tweets-account"> @{{this.User.account}} ．{{relativeTimeFromNow this.createdAt}}</span>
                </div>
                <div class="tweets-content">
                  <a href="users/replies" id="toReply" class="card-text">
                    {{this.description}}
                  </a>
                </div>
                <div class="tweets-icons">
                  <a><img src="/images/basic/white/reply.svg">{{this.repliesCount}}</a>
                  <a>
                    {{#if isliked}}
                    <img src="/images/basic/isliked.svg">
                    {{else}}
                    <img src="/images/basic/white/like.svg">
                    {{/if}}
                    {{this.likesCount}}</a>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    <div class="col-3 border-start" style="height: 100vh">
      <div class="popular-container">
        <div class="popular-title">
          <h4>推薦跟隨</h4>
        </div>
        <ul class="popular-list-group p-3">
          {{#each result}}
          {{>right-sidebar}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>